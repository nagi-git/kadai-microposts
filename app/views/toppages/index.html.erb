<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @micropost, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
         <%= f.file_field :img, class: "image" %>
        </div>
        <%= f.submit 'つぶやく', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'microposts/microposts', microposts: @microposts, user: @user  %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>つぶやきポストへようこそ！</h1>
      <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>
      <p><br/>登録済の方、ユーザー未登録だけどお試ししたい方は
      <br/><%= link_to '⇒ログインページへ！', login_path %></p>
    </div>
  </div>
<% end %>